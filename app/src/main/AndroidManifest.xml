<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".realm.RealmApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DNDCharacterApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.CharacterInsertarActivity"
            android:exported="false"
            android:label="@string/title_activity_character_insertar"
            android:theme="@style/Theme.DNDCharacterApp" />
        <activity
            android:name=".ui.CharacterActivity"
            android:exported="false"
            android:label="@string/title_activity_character"
            android:theme="@style/Theme.DNDCharacterApp" />
        <activity
            android:name=".ui.ConfigurationActivity"
            android:exported="false"
            android:label="@string/title_activity_configuration"
            android:theme="@style/Theme.DNDCharacterApp" />
        <activity
            android:name=".ui.CharacterRecyclerActivity"
            android:exported="false"
            android:label="@string/title_activity_character_recycler"
            android:theme="@style/Theme.DNDCharacterApp" />
        <activity
            android:name=".ui.EquipmentItemActivity"
            android:exported="false"
            android:label="@string/title_activity_equipment_item"
            android:theme="@style/Theme.DNDCharacterApp" />
        <activity
            android:name=".ui.ItemReciclerActivity"
            android:exported="false"
            android:label="@string/title_activity_item_recicler"
            android:theme="@style/Theme.DNDCharacterApp" />
        <activity
            android:name=".ui.MagicActivity"
            android:exported="false"
            android:label="@string/title_activity_magic"
            android:theme="@style/Theme.DNDCharacterApp" />
        <activity
            android:name=".ui.MagicReciclerView"
            android:exported="false"
            android:label="@string/title_activity_magic_recicler_view"
            android:theme="@style/Theme.DNDCharacterApp" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DNDCharacterApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>